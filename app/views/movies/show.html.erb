<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-sm-4">
    <%= image_tag @movie.poster_path %>
  </div>

  <div class="col-sm-8">
    <p>
      <strong>Tmdb:</strong>
      <%= @movie.tmdb_id %>
    </p>

    <p>
      <strong>Title:</strong>
      <%= @movie.title %>
    </p>

    <p>
      <strong>Vote count:</strong>
      <%= @movie.vote_count %>
    </p>

    <p>
      <strong>Vote average:</strong>
      <%= @movie.vote_average %>
    </p>

    <p>
      <strong>Overview:</strong>
      <%= @movie.overview %>
    </p>

    <p>
      <strong>Release date:</strong>
      <%= @movie.release_date %>
    </p>
  </div>
</div>

