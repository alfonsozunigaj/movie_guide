      <div class="image">
        <%= link_to (image_tag 'http://image.tmdb.org/t/p/w185/' + movie['poster_path'], class: 'zoom polaroid'), save_movie_path(id: movie[:id], title: movie[:title], vote_count: movie[:vote_count], vote_average: movie[:vote_average], overview: movie[:overview], poster_path: movie[:poster_path], release_date: movie[:release_date]) %>
